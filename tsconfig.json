{
  "compilerOptions": {
    "baseUrl": ".",
    "declarationDir": "./lib",
    "sourceMap": true,
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "target": "esnext",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "creevey/lib/*": ["src/*"]
    }
  },
  "exclude": [
    // NOTE: This need to generate d.ts bundle with correct path
    "./*.ts",
    "./lib"
  ]
}
